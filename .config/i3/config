#############
# constants #
#############

# alternate arrow keys
set $up k
set $down j
set $left h
set $right l 

# modifier key
set $mod Mod1
floating_modifier $mod

# Misc
set $float /home/tauras/.config/scripts/floating.sh 
set $prompt /home/tauras/.config/scripts/prompt.sh

#########
# modes #
#########

