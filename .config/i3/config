###########
# classes #
###########

for_window [class="love"] floating enable
for_window [instance="urxvtfloat"] floating enable

########
# misc #
########

# disable beeping
exec xset b off

# rebing caps lock
#exec_always setxkbmap -option caps:escape

# keyboard repeat settings
exec xset r rate 300 60

# keyboard layouts
exec_always --no-startup-id "setxkbmap -layout us,lt,ru -option 'grp:alt_space_toggle' -option caps:escape"
